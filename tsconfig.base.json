{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "ES2020.Promise"],
    "allowJs": true,
    "declaration": true,
    "sourceMap": true,
    "composite": true,
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node12",
    "typeRoots": ["types"],
    "types": ["node"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "incremental": true
  },
  "exclude": [
    "**/*.spec.ts",
    ".vscode",
    "node_modules/*",
    "ui/*",
    "**/node_modules/*",
    "**/log/*",
    ".git*/",
    "**/.nyc_output/*",
    "**/coverage/*",
    "**/reports/*",
    "**/.temp/*",
    "**/build/*",
    "**/test/*",
    "**/debug/*",
    "**/babel*"
  ]
}
